<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で送信する</h3>
    <%= form_for(@contents) do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <p>名前:<%= @contents.name %></p>
      <p>メール:<%= @contents.email %></p>
      <p>内容:<%= @contents.content %></p>
      <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@contents, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>